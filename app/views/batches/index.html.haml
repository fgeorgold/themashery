%h1
  Listing batches
%table
  %tr
    %th
      Recipe
    %th
      Brewed on
    %th
      Notes
  - @batches.each do |batch|
    %tr
      %td
        = link_to h(batch.recipe.title), recipe_path(batch.recipe)
      %td
        = h batch.brewed_on
      %td
        = h batch.notes
      %td
        = link_to 'Show', batch
      %td
        = link_to 'Edit', edit_batch_path(batch)
      %td
        = link_to 'Destroy', batch, :confirm => 'Are you sure?', :method => :delete
%br
= link_to 'New batch', new_batch_path
